<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.darly.dubbo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <com.darly.dview.widget.header.TitleView
            android:id="@+id/id_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单柱图"/>
        <com.darly.chartlib.charts.BarChart
            android:id="@+id/id_chart_barchart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.darly.chartlib.charts.LineChart
            android:id="@+id/id_chart_linechart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</ScrollView>
